<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EnglishTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/enColorPrimary</item>
        <item name="colorPrimaryDark">@color/enColorPrimaryDark</item>
        <item name="colorAccent">@color/enColorAccent</item>
    </style>

    <style name="SpanishTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/esColorPrimary</item>
        <item name="colorPrimaryDark">@color/esColorPrimaryDark</item>
        <item name="colorAccent">@color/esColorAccent</item>
    </style>

    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.LongText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/longTextTextSize</item>
        <item name="android:lineHeight">@dimen/longTextLineHeight</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">@dimen/buttonPaddingStart</item>
        <item name="android:paddingEnd">@dimen/buttonPaddingEnd</item>
    </style>

</resources>
